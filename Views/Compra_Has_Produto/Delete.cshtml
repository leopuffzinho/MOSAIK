@model MOSAIK.Models.Compra_Has_Produto

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Tem certeza que deseja deletar isso?</h3>
<div>
    <h4>Compra_Has_Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Compra)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Compra.TotalCompra)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Produto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Produto.NomeProduto)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Compra_Has_ProdutoId" />
        <input type="submit" value="Deletar" class="btn btn-segundo" /> 
        <a asp-action="Index" class="btn btn-primary">Voltar para a lista</a>
    </form>
</div>
