@model IEnumerable<MOSAIK.Models.Compra_Has_Produto>

@{
    ViewData["Title"] = "Index";
}

<h1>Compra_Has_Produto</h1>

<p>
    <a asp-action="Create" class="btn btn-segundo">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Compra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Compra.TotalCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produto.NomeProduto)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Compra_Has_ProdutoId" class="btn btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Compra_Has_ProdutoId" class="btn btn-primary">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Compra_Has_ProdutoId" class="btn btn-primary">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
